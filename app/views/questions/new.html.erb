<h1>Post a Question</h1>

<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <%= form_for @question do |f| %>
            <%= render 'shared/error_messages', entity: @question %>

            <%= f.label :text %>
            <%= f.text_area :text, class: "form-control" %>

            <%= f.submit "Add Question", class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>
