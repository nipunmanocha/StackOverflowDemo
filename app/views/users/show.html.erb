<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-4 text-center">
    <h2>My Questions</h2>
    <% @questions.each do |question| %>
        <%= link_to question[:text], question_path(question) %> <br/>
    <% end %>
  </div>

  <div class="col-md-4" id="add_question_div">
    <% if @user.id == session[:user_id] %>
      <%= link_to 'Add a Question', new_question_path, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
