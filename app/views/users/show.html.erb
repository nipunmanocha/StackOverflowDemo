<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-4">
    <ul>
      <% @questions.each do |question| %>
        <li>
          <%= link_to question[:text], question_path(question) %>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="col-md-4" id="add_question_div">
    <%= link_to 'Add a Question', new_question_path, class: "btn btn-primary" %>
  </div>
</div>
